{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": false,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/features/*": ["src/features/*"],
      "@/ui/*": ["src/ui/*"],
      "@/components/*": ["src/components/*"],
      "@/navigation/*": ["src/navigation/*"],
      "@/screens/*": ["src/screens/*"],
  "@/store/*": ["src/store/*"],
      "@/theme": ["src/theme/index"],
      "@/theme/*": ["src/theme/*"],
      "@/assets/*": ["assets/*"],
      "@/types": ["src/types"],
      "@/context/*": ["src/context/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "App.tsx"],
  "exclude": ["node_modules", "dist"]
}